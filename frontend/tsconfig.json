{
  "exclude": ["packages/**/operations.generated.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/components": ["packages/common/src/ui/components"],
      "@common/hooks": ["packages/common/src/hooks"],
      "@common/icons": ["packages/common/src/ui/icons"],
      "@common/intl": ["packages/common/src/intl"],
      "@common/intl/*": ["packages/common/src/intl/*"],
      "@common/styles": ["packages/common/src/styles"],
      "@common/types": ["packages/common/src/types"],
      "@common/utils": ["packages/common/src/utils"],
      "@common/ui": ["packages/common/src/ui"],
      "@common/authentication": ["packages/common/src/authentication"]
    },
    "resolveJsonModule": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noEmit": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
